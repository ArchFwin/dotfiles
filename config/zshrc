#Environment Variables
export EDITOR="vim"

#File Extraction
ex()
{
	if [ -f "$1" ] ; then
		case "$1" in
			*.tar.bz2)	tar xjf "$1"	;;
			*.tar.gz)	tar xzf "$1"	;;
			*.bz2)		bunzip2 "$1"	;;
			*.rar)		unrar x "$1"	;;
			*.gz)		gunzip "$1"	;;
			*.tar)		tar xf "$1"	;;
			*.tbz2)		tar xjf "$1"	;;
			*.tgz)		tar xzf "$1"	;;
			*.zip)		unzip "$1"	;;
			*.Z)		uncompress "$1"	;;
			*.7z)		7z x "$1"		;;
			*.rpm)		bsdtar xvf "$1" ;;
			*.deb)		bsdtar xvf "$1" ;;
			*)			bsdtar xff "$1" || echo "'$1' cannot be extracted"	;;
		esac
	else
		echo "'$1' is not a file"
	fi
}

#Go to a directory and show all the shit there
go()
{
	cd "$1" || return 1;
	ls;
}

#Xautolock Pause
pause()
{
	xautolock -disable
	sleep $1
	xautolock -enable
}

bindkey '^[[A' up-line-or-search
bindkey '^[[B' down-line-or-search

#Pkgfile command not found
command_not_found_handler(){
	local pkgs cmd="$1"
	pkgs=(${(f)"$(pkgfile -bv -- "$cmd" 2>/dev/null)"})
	printf "$fg[red]I'm sorry, $LOGNAME. I'm afraid I can't do that. \n"
	if [[ -n "$pkgs" ]]; then
		printf "$fg[blue]The following packages provide $1:\n$fg[yellow]%s\n" $pkgs[@]
		return 0
	else;
		printf "$fg[green]No packages provide $1 \n"
	fi
}
